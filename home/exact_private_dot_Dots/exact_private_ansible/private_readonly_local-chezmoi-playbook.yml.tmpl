# chezmoi:template: left-delimiter={@' right-delimiter='@}
{@' includeTemplate .templates.msgManagedByChezmoi . | comment "# " '@}
---
{@' if .sysIsBrandsPrivate -'@}

- name: Establish local symlinks
  hosts: all
  roles:
    - file_manager
  vars_files:
    - vars/local-symlinks.yml
  become: false
  gather_facts: false
  tags:
    - local
    - symlinks

{@'- end '@}

{@' if .sysIsDebianBased -'@}
- name: Manage Packages
  hosts: all

  pre_tasks:
    - name: Upgrade apt
      become: true
      ansible.builtin.apt:
        upgrade: true
        update-cache: true
        install_recommends: false
        autoclean: true
        autoremove: true
      diff: true

  roles:
    - desktop_stuff

{@'- end '@}

- name: System Fontconfig Configuration
  hosts: all
  vars_files:
    - vars/fontconfig-config.yml

  roles:
    - fontconfig_config
...
