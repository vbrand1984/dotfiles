{@' if not (env .app.envIgnoreExternals) '@}
# {{{ General

# Vim plugin manager
[".vim/autoload/plug.vim"]
	type = "file"
	url = "https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
	refreshPeriod = "168h"

# }}}
# {{{ Themes

# Our default GTK and Openbox themes:
# Greylooks, GreylooksGreen, GreylooksHuman, GreylooksOk, GreylooksPurple, GreylooksSand
{@' range .misc.greylooksThemes '@}
[".local/share/themes/{@' . '@}"]
	type = "archive"
	url = "https://github.com/vbrand1984/greylooks/archive/master.zip"
	format = "zip"
	exact = true
	stripComponents = 2
	include = ["greylooks-master/{@' . '@}/**"]
	refreshPeriod = "1680h"
{@' end '@}

# }}}
# {{{ Fonts

